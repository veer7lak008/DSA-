#include <stdio.h>
#include <string.h>

int main() {
    char mainStr[100];      // Original string
    char pattern[20];       // Word to be replaced
    char replaceStr[20];    // New word
    char result[100];       // Final modified string
    char *foundPos;         // Pointer to pattern position

    // Read main string
    printf("Enter main string: ");
    fgets(mainStr, sizeof(mainStr), stdin);
    mainStr[strcspn(mainStr, "\n")] = '\0';   // Remove newline

    // Read pattern
    printf("Enter pattern to replace: ");
    fgets(pattern, sizeof(pattern), stdin);
    pattern[strcspn(pattern, "\n")] = '\0';

    // Read replacement string
    printf("Enter replacement string: ");
    fgets(replaceStr, sizeof(replaceStr), stdin);
    replaceStr[strcspn(replaceStr, "\n")] = '\0';

    // Find pattern in main string
    foundPos = strstr(mainStr, pattern);

    // If pattern not found
    if (foundPos == NULL) {
        printf("Pattern not found\n");
        return 0;
    }

    /* 
       Copy characters before the pattern 
       (from start of mainStr to foundPos)
    */
    strncpy(result, mainStr, foundPos - mainStr);
    result[foundPos - mainStr] = '\0';  // End string properly

    // Add replacement string
    strcat(result, replaceStr);

    // Add remaining part after pattern
    strcat(result, foundPos + strlen(pattern));

    // Print final string
    printf("Modified string: %s\n", result);

    return 0;
}
