#include <stdio.h>
#include <stdlib.h>

typedef struct {
    char *name;
    int date;
    char *desc;
} Day;

void read(Day *w, int n) {
    for (int i = 0; i < n; i++) {
        w[i].name = malloc(20);
        w[i].desc = malloc(100);

        scanf("%s %d", w[i].name, &w[i].date);
        scanf(" %[^\n]", w[i].desc);
    }
}

void display(Day *w, int n) {
    for (int i = 0; i < n; i++)
        printf("%s %d %s\n", w[i].name, w[i].date, w[i].desc);
}

int main() {
    Day *week = malloc(7 * sizeof(Day));

    read(week, 7);
    display(week, 7);

    for (int i = 0; i < 7; i++) {
        free(week[i].name);
        free(week[i].desc);
    }
    free(week);
    return 0;
}
